	================================================== -->
			<div class="dashboard-content-container" data-simplebar>
				<div class="dashboard-content-inner">

					<!-- Dashboard Headline -->
					<div class="dashboard-headline">
						<h3>Reviews</h3>

						<!-- Breadcrumbs -->
						<nav id="breadcrumbs" class="dark">
							<ul>
								<li><a href="#">Dashboard</a></li>
								<li>Reviews</li>
							</ul>
						</nav>
					</div>

					<!-- Row -->
					<div class="row">

						<!-- Dashboard Box -->
						<div class="col-xl-12">
							<div class="dashboard-box margin-top-0">

								<!-- Headline -->
								<div class="headline">
									<h3><i class="icon-material-outline-business"></i> Rate Employers/Company</h3>
								</div>

								<div class="content">
									<ul class="dashboard-box-list">
										<% for (let i=0; i < review.length; i++) { %>
											<li>
												<div class="boxed-list-item">
													<!-- Content -->
													<div class="item-content">
														<% for (let j=0; j < company.length; j++) { %>
															<%if (review[i].company_id==company[j].company_id) { %>
																<h4>
																	<%= company[j].companyname %>
																</h4>
																<% } } %>
																	<div class="item-details margin-top-10">
																		<div class="star-rating">Rating :
																			<%=review[i].rate%>
																		</div>
																		<div class="detail-item"><i
																				class="icon-material-outline"></i>Review
																			Title:<%=review[i].reviewtitle%>
																		</div>
																	</div>
																	<div class="item-description">
																		<p>
																			<%=review[i].review%>
																		</p>
																	</div>
													</div>
											</li>
											<%}%>

									</ul>
								</div>
							</div>


						</div>


					</div>
