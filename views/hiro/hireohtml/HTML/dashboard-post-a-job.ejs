					<!-- Row -->
					<div class="row">
						<form method="post" id="postjob" enctype="multipart/form-data">
							<!-- Dashboard Box -->
							<div class="col-xl-12">
								<div class="dashboard-box margin-top-0">

									<!-- Headline -->

									<div class="headline">
										<h3><i class="icon-feather-folder-plus"></i> Job Submission Form</h3>
									</div>

									<div class="content with-padding padding-bottom-10">
										<div class="row">

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Job Title</h5>
													<input type="text" name="job_title" id="job_title"
														class="with-border">
												</div>
											</div>

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Job Type</h5>
													<select class="selectpicker with-border" name="job_type"
														id="job_type" data-size="7" title="Select Job Type">
														<option>Full Time</option>
														<option>Freelance</option>
														<option>Part Time</option>
														<option>Internship</option>
														<option>Temporary</option>
													</select>
												</div>
											</div>

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Job Category</h5>
													<select class="selectpicker with-border" name="category"
														data-size="7" title="Select Category" id="category">
														<option>Accounting and Finance</option>
														<option>Clerical & Data Entry</option>
														<option>Counseling</option>
														<option>Court Administration</option>
														<option>Human Resources</option>
														<option>Investigative</option>
														<option>IT and Computers</option>
														<option>Law Enforcement</option>
														<option>Management</option>
														<option>Miscellaneous</option>
														<option>Public Relations</option>
													</select>
												</div>
											</div>

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Location</h5>
													<div class="input-with-icon">
														<div id="autocomplete-container">
															<input id="autocomplete-input" class="with-border"
																name="address" id="address" type="text"
																placeholder="Type Address">
														</div>
														<i class="icon-material-outline-location-on"></i>
													</div>
												</div>
											</div>

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Salary</h5>
													<div class="row">
														<div class="col-xl-6">
															<div class="input-with-icon">
																<input class="with-border" name="min" id="min"
																	type="number" placeholder="Min">
																<i class="currency">USD</i>
															</div>
														</div>
														<div class="col-xl-6">
															<div class="input-with-icon">
																<input class="with-border" name="max" id="max"
																	type="number" placeholder="Max">
																<i class="currency">USD</i>
															</div>
														</div>
													</div>
												</div>
											</div>

											<div class="col-xl-4">
												<div class="submit-field">
													<h5>Tags <i class="help-icon" data-tippy-placement="right"
															title="Add tags that best describe your project"></i></h5>
													<div class="input-with-icon">
														<div id="autocomplete-container">
															<input id="autocomplete-input" name="tag" type="text"
																placeholder="tag1,tag2,tag3..">
														</div>
														<i class="icon-material-outline"></i>
													</div>
												</div>
											</div>

											<div class="col-xl-12">
												<div class="submit-field">
													<h5>Job Description</h5>
													<textarea cols="30" rows="5" name="job_description"
														class="with-border" required></textarea>
													<div class="uploadButton margin-top-30">
														<input class="uploadButton-input" name="image_upload"
															type="file" accept="image/*, application/pdf" required
															id="upload" multiple />
														<label class="uploadButton-button ripple-effect"
															for="upload">Upload Files</label>
														<span class="uploadButton-file-name">Images or documents that
															might be helpful in describing your project</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
